{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  // 需要编译的文件
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    // composite 用于合并至 tsconfig.json
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]  // vscode ts提示相关, 如果用 tsc 编译，也会用到这个，但是项目是用 vite 打包编译的
    }
  }
}
